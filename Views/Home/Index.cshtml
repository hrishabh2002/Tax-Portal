@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4 text-primary">Welcome to the Income Tax Management Portal</h1>
            <p class="lead text-secondary">Your comprehensive solution for managing income tax deductions and filings.</p>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card bg-info text-white" style="border-radius: 15px;">
                <div class="card-body">
                    <h5 class="card-title">File Your Taxes Online</h5>
                    <p class="card-text">Easily file your income tax returns online, saving time and effort.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white" style="border-radius: 15px;">
                <div class="card-body">
                    <h5 class="card-title">Track Your Deductions</h5>
                    <p class="card-text">Keep track of your deductions throughout the year for better tax planning.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark" style="border-radius: 15px;">
                <div class="card-body">
                    <h5 class="card-title">Stay Informed</h5>
                    <p class="card-text">Stay updated with the latest tax news, regulations, and tips.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-6 offset-md-3 text-center">
            <p class="text-muted">Our portal provides a user-friendly interface to help you manage your income tax efficiently. Whether you're an individual taxpayer or a tax professional, our platform is designed to simplify the tax filing process and provide you with valuable insights into your tax obligations.</p>
           
        </div>
    </div>
</div>
