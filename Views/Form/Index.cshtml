<form asp-controller="Form" asp-action="Index" method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Choose Financial Year</h2>
            <hr />
            <div class="mb-3 p-3">
                <label for="FinancialYear"></label>
                <select for="FinancialYear" name="year" class="form-control">
                  
                    <option value="@(DateTime.Now.Year)" selected>@(DateTime.Now.Year)</option>
                    <option value="@(DateTime.Now.Year-1)">@(DateTime.Now.Year - 1)</option>
                    <option value="@(DateTime.Now.Year-2)">@(DateTime.Now.Year - 2)</option>
                    <option value="@(DateTime.Now.Year-3)">@(DateTime.Now.Year - 3)</option>
                    <option value="@(DateTime.Now.Year-4)">@(DateTime.Now.Year - 4)</option>
                    <option value="@(DateTime.Now.Year-5)">@(DateTime.Now.Year - 5)</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Select</button>
        </div>
    </div>
</form>

